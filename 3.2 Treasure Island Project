print("Welcome to Treasure Island.\nYour Mission is to find the treasure \n")

choice1 = input("Do you want to go left or right? ")

if choice1.lower() == "left":
    choice_2 = input("Do you want to swim or wait? ")
    
    if choice_2.lower() == "wait":
        choice_3 = input("Which door: Red, Blue, or Yellow? ")
        
        if choice_3.lower() == "red":
            print("Game Over. You have been burned by fire.")
        elif choice_3.lower() == "blue":
            print("Game Over. You have been eaten by beasts.")
        elif choice_3.lower() == "yellow":
            print("You Win!")
        else:
            print("Game Over!")
    else:
        print("You have been attacked by a trout. Game Over!")
else: 
    print("You fell into a hole. Game Over!")
